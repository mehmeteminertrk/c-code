#include <stdio.h>

int main()
{
   int i=0;
   int j=0;
   char dizi[100];
   printf("Lutfen bir cumle giriniz:\n");
   gets(dizi);
   while(i<strlen(dizi)){
       j=0;
       while(j<=i){
           printf("%c",dizi[j]);
           j++;
       }
      printf("\n");
       i++;
   }

    return 0;
}
