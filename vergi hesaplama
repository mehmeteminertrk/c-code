#include <stdio.h>
#include <stdlib.h>
#define vergi_kitap 4.0
#define vergi_temelgida 5.6
#define vergi_luks 19.6
#define kitap 0
#define temelgida 1
#define luks 2



int main()
{
 
 
 
 
 int kod;
float fiyat;

printf("Lutfen urunun kodunu ve fiyatini giriniz:\n");
scanf("%d %f",&kod,&fiyat);
 printf("Urunumuzun satis fiyatini ");
 switch(kod){
     
     case kitap : printf("Kitapin fiyati:%.2f\n",fiyat+fiyat*vergi_kitap/100);break;
     case temelgida  : printf("Temel gidanin fiyati:%.2f\n",fiyat+fiyat*vergi_temelgida/100);break; 
     case luks  : printf("Luks urunun fiyati:%.2f\n",fiyat+fiyat*vergi_luks/100);break;
     default:printf("Hatali islem yaptiniz");break;
 }
    return 0;
    
}
