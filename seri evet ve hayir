#include <stdio.h>
#include <math.h>

int main()
{
    int i,n;
    float x,seri;
    char devam;
    do{
        printf("Poziif sayi giriniz:");
    scanf("%d",&n);
    
    printf("Reel sayi giriniz:");
    scanf("%f %c",&x,&devam);
   seri=0;
  for(i=1;i<=2*n-1;i+=2){
      seri+=i/pow(x,i+1);
  }
    
        printf("seri: %f\n",seri);
    }
    while((devam=='E')|| (devam=='e'));
    printf("Hoscakalin");
    
    
    return 0;
    
    
    
}
