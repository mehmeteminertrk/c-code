#include <string.h>
#include <stdio.h>
#include <stdlib.h>
int main()
{
   
   int i,j;
   int sayac=0;
   char dizi[100];
   printf("Lutfen bir cumle giriniz:\n");
   gets(dizi);
   for(i=0;dizi[i];i++){
       printf("%c",dizi[i]);
       if(dizi[i]==32){
           printf("\n");
            sayac++;
       for(j=0;j<sayac;j++){
           printf("\t");
       }
       
   }
       }
      

    return 0;
}
