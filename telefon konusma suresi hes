#include <stdio.h>

int main()
{
float sure,ucret;
printf("Lutfen konusma surenizi giriniz:");
scanf("%f",&sure);
if(sure<=3){
    ucret=0.25;
}
else {
    ucret=0.25+(sure-3)*0.08;
}
    printf("Ucret:%f",ucret);
    return 0;
}
