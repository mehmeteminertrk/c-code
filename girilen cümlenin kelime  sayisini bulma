#include <string.h>
#include <stdio.h>
#include <stdlib.h>
int main()
{
   
   int i=0;
   int sayac=0;
   char dizi[100];
   printf("Lutfen bir cumle giriniz:\n");
   gets(dizi);
   
   while(dizi[i]){
      if(dizi[i]==32){
          sayac++;
      }
       i++;
   }
   
   printf("Girilen cumledeki kelime sayisi sayisi:%d\n",sayac+1);

    return 0;
}
