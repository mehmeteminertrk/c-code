#include <stdio.h>
#include <math.h>

int main()
{
    int i,n;
    float x,seri;
    printf("Poziif sayi giriniz:");
    scanf("%d",&n);
    
    printf("Reel sayi giriniz:");
    scanf("%f",&x);

  for(i=1;i<=2*n-1;i+=2){
      seri+=i/pow(x,i+1);
  }
    
    printf("seri: %f",seri);
    
    return 0;
    
    
    
}
