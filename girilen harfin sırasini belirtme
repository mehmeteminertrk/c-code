#include <stdio.h>

int main()
{
    char ch;
    int sira;
    printf("Bir karekter giriniz:");
    scanf("%c",&ch);
    if((ch>='A')&&(ch<='Z')){
        sira=(int)ch-(int)'A'+1;
    }
    
    else if((ch>='a')&&(ch<='z')){
        sira=(int)ch-(int)'a'+1;
    }
    else {
        printf("Lutfen harf giriniz boyle bir harf yoktur");
    }
    printf("%c :%d. harfdir",ch,sira);

    return 0;
}
