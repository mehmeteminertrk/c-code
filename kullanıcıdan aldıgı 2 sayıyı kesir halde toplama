#include <stdio.h>

int main()
{
    int x,y;
    char op;
    printf("Bir operator giriniz (+,-):");
    scanf("%c",&op);
    printf("Ä°ki tamsayi giriniz:\n");
    scanf("%d%d",&x,&y);
    if((x==0) || (y==0)){
        printf("Islem yapalamiyor");
    }
    
    else{
        printf("1/%d  %c  1/%d= ",x,op,y);
    }
    switch(op){
        
        case '+':{
            printf("%d/%d",(x+y),x*y);
        }
        break;
         case '-':{
            printf("%d/%d",(x-y),x*y);
        }
        break;
        default:
        {
            printf("Tanimlanmayan islem girdiniz");
          
        }
        
    }
    return 0;
}
