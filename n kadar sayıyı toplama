#include <stdio.h>

int main()
{
    int i,n;
    int sonuc;
    printf("Lutfen bir sayi giriniz:");
    scanf("%d",&n);
    i=1;
    sonuc=0;
    while(i<=n){
        
       if(i==n){
           printf("%d",n);
       } 
       else{
           printf("%d +",i);
       }
       
       sonuc=sonuc+i;
        i++;
       
    }
 printf(" =%d",sonuc);
    return 0;
}
