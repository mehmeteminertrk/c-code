#include <stdio.h>

int main()
{
   int i;
   int n;
   float sonuc;
   do{
       
       printf("Lutfen n degerini giriniz:");
       scanf("%d",&n);
     
   }
   while(n<1);
   
   for(i=1;i<=n;i++){
       sonuc+=(float) 1/i;
   }
   printf("Sonucumuz:%f",sonuc);

    return 0;
}
